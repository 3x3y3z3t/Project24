@page
@model ForgotPasswordModel
@{
  ViewData["Title"] = "Quên mật khẩu?";
}

<h1>@ViewData["Title"]</h1>
<h4>Đặt lại mật khẩu bằng email hoặc liên hệ với quản lý nêu bạn không thiết lập email.</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <h6>Đặt lại mật khẩu bằng email.</h6>
    <form method="post">
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Input.Email">Email</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button>
    </form>
    <hr />
    <br />

    <h6>Gửi yêu cầu đặt lại mật khẩu lên quản lý.</h6>
    <form method="post">
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Input.Email">Tên đăng nhập</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
    </form>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
