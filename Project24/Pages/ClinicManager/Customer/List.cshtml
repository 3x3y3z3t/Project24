@page "{handler?}"

@using System.Globalization
@model Project24.Pages.ClinicManager.ListCustomerModel
@{
    ViewData[CustomInfoKey.Language] = CustomInfoKey.Lang_Vi_VN;
    ViewData["Title"] = "Danh sách bệnh nhân";
    Layout = "_Layout";

    string today = DateTime.Now.ToString("yyyy-MM-dd");
}

<h1>@ViewData["Title"]</h1>

<div>
    <a asp-page="Create" class="btn btn-primary mr-1">Thêm bệnh nhân mới</a>
    <a href="#" class="btn btn-secondary" hidden>Bổ sung bệnh nhân cũ</a>
</div>
<hr />

<h4><a data-toggle="collapse" data-target="#search-form-collapse" style="color: inherit;">Tìm kiếm (click để mở rộng)</a></h4>
<div id="search-form-collapse" class="collapse">
    <form method="get" asp-page-handler="Search" enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <label class="control-label">Ngày tháng</label>
            <input name="_date" type="date" class="form-control" value="" min="2000-01-01" max="@today" />
        </div>
        <div class="form-group">
            <label class="control-label">Tên</label>
            <input name="_name" class="form-control" value="@Model.SearchFormData.Name" />
        </div>
        <div class="form-group">
            <label class="control-label">SĐT</label>
            <input name="_phone" class="form-control" value="@Model.SearchFormData.PhoneNumber" />
        </div>
        <div class="form-group">
            <label class="control-label">Địa chỉ</label>
            <input name="_address" class="form-control" value="@Model.SearchFormData.Address" />
        </div>

        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        <a asp-page="List" class="btn btn-secondary">Hủy bỏ</a>
    </form>
</div>
<hr />
<br />

<div class="" style="font-size: x-large">
    @if (Model.IsSearchMode)
    {
        <span>Tìm thấy <span class="font-weight-bold">@string.Format(CultureInfo.CreateSpecificCulture("vi-VN"), "{0:#,##0}", Model.Customers.Count)</span> bệnh nhân</span>
    }
    else
    {
        <span>Tổng số bệnh nhân: <span class="font-weight-bold">@string.Format(CultureInfo.CreateSpecificCulture("vi-VN"), "{0:#,##0}", Model.Customers.Count)</span></span>
    }
</div>

<table class="table table-sm">
    <thead>
        <tr>
            <th style="width: 15ch;">Mã</th>
            <th style="width: 25ch;">Họ và Tên</th>
            <th style="width: 15ch;">Số điện thoại</th>
            <th style="">Địa chỉ</th>
            <th style="">Ghi chú</th>
            <th style="width: 15ch;">Phiếu khám</th>
            <th style="width: 20ch;"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var customer in Model.Customers)
        {
            int age = AppConfig.ThisYear - customer.DoB;
            <tr>
                <td>@customer.Code</td>
                <td>@customer.Fullname (@age)</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Address</td>
                <td>@customer.Notes</td>
                <td>@customer.TicketCount (<a href="#">Xem</a>)</td>

                <td>
                    <div class="text-center">
                        <div>
                            <a asp-page="Details" asp-route-_code="@customer.Code">Chi tiết</a> |
                            <a asp-page="Edit" asp-route-_code="@customer.Code">Sửa thông tin</a>
                        </div>
                        <div>
                            <a asp-page="Delete" asp-route-_code="@customer.Code" class="text-danger font-weight-bold">Xóa</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.IsSearchMode)
{
    @section Scripts {
<script type="text/javascript">
    $(document).ready(function () {
        $(".collapse").collapse("show");
    })
</script>
    }
}
