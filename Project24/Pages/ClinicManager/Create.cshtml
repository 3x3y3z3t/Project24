@page
@model Project24.Pages.ClinicManager.CreateModel

@{
  ViewData["Title"] = "Đăng ký bệnh nhân mới";
  Layout = "_CMLayout";
}

<h1>@ViewData["Title"]</h1>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<hr />
<div class="row">
  <div class="col-md-6">

    <form method="post" enctype="multipart/form-data">
      <div asp-validation-summary="All" class="text-danger"></div>

      <div class="form-group">
        <label asp-for="Data.CustomerCode" class="control-label">Mã bệnh nhân (tự động điền)</label>
        <input asp-for="Data.CustomerCode" class="form-control" readonly />
        <span asp-validation-for="Data.CustomerCode" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Data.FullName" class="control-label">Họ và Tên bệnh nhân</label>
        <input asp-for="Data.FullName" class="form-control" />
        <span asp-validation-for="Data.FullName" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Data.Address" class="control-label">Địa chỉ</label>
        <textarea asp-for="Data.Address" class="form-control" text-wrap="normal" rows="3"></textarea>
        <span asp-validation-for="Data.Address" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Data.PhoneNumber" class="control-label">Số điện thoại</label>
        <input asp-for="Data.PhoneNumber" class="form-control" />
        <span asp-validation-for="Data.PhoneNumber" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Data.Notes" class="control-label">Ghi chú</label>
        <textarea asp-for="Data.Notes" class="form-control" text-wrap="normal" rows="5"></textarea>
        <span asp-validation-for="Data.Notes" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Data.FileUploads" class="control-label"></label>
        <input asp-for="Data.FileUploads" class="form-control" />
        <span asp-validation-formaction="Data.FileUploads" class="text-danger"></span>
      </div>

      <hr />
      <div class="form-group" hidden>
        <label asp-for="Data.ManagerPassword" class="control-label">Xác nhận Mật khẩu người quản lý</label>
        <input asp-for="Data.ManagerPassword" class="form-control" readonly/>
        <span asp-validation-for="Data.ManagerPassword" class="text-danger"></span>
      </div>

      <button type="submit" class="btn btn-primary">Đăng ký</button>
      <button type="button" onclick="location.href='./Index'" class="btn btn-secondary">Hủy bỏ</button>

      @Html.AntiForgeryToken()
    </form>

  </div>
</div>

