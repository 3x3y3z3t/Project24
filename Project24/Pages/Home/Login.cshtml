@page

@model Project24.Pages.Home.LoginModel
@{
  ViewData["Title"] = "Login";
  Layout = "_Layout";
}

<div class="d-flex align-items-center justify-content-center">
  <div style="max-width: 1366px">

    <h5>Nếu bạn chưa có tài khoản, vui lòng liên hệ với quản lý.</h5>
    <hr />

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.StatusMessage
      </div>
    }

    <form id="account" method="post">

      <div class="form-group row">
        <label asp-for="Data.Username" class="col-lg-3 align-bottom">Tên đăng nhập</label>
        <input asp-for="Data.Username" class="col-lg-7 form-control" />
        <span asp-validation-for="Data.Username" class="text-danger"></span>
      </div>

      <div class="form-group row">
        <label asp-for="Data.Password" class="col-lg-3 align-bottom">Mật khẩu</label>
        <input asp-for="Data.Password" class="col-lg-7 form-control" />
        <span asp-validation-for="Data.Password" class="text-danger"></span>
      </div>

      <div class="form-group row">
        <div class="col-lg-3"></div>
        <div class="checkbox col-lg-7">
          <label asp-for="Data.RememberLogin">
            <input asp-for="Data.RememberLogin" />
            Lưu phiên đăng nhập
          </label>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-3"></div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
      </div>

      <div class="form-group row">
        <div class="col-lg-3"></div>
        <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
      </div>
      
      <div asp-validation-summary="All" class="text-danger"></div>

    </form>

  </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
