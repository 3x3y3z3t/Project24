@using Microsoft.AspNetCore.Identity
@using Project24.Identity
@inject UserManager<P24IdentityUser> _userManager

@{
    bool isManager = false;
    bool isNasUser = false;

    if (User.Identity.IsAuthenticated)
    {
        P24IdentityUser user = await _userManager.GetUserAsync(User);
        if (user != null)
        {
            isManager = await _userManager.IsInRoleAsync(user, P24RoleName.Manager);
            isNasUser = await _userManager.IsInRoleAsync(user, P24RoleName.NasUser);
        }
    }
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a href="/Home/Index" class="navbar-brand font-weight-bold">P24</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                <partial name="_UserInfo" />

                <ul class="navbar-nav flex-grow-1">
                    @if (isManager)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/ClinicManager/Index">Quản lý bệnh nhân</a>
                        </li>
                    }
                    @if (isNasUser)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Nas/Index">NAS</a>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>
</header>
