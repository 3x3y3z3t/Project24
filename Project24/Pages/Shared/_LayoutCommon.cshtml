@using Project24.App;
@using Project24.App.Services;

@inject LocalizationSvc m_LocalizationSvc

@{
    string title = (string)ViewData[ViewDataKeys.Title];
    HtmlString titleHtml = new HtmlString(title);

    string localizationFile = "p24-localization-" + ViewData[ViewDataKeys.Locale].ToString() + ".js";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Project24</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/Project24.styles.css" asp-append-version="true" />*@

    @await RenderSectionAsync("Stylesheet", required: false)
</head>

<body>
    <partial name="_HeaderCommon" />

    <div class="container">
        <main role="main" class="pb-3">

            @if (!MiscUtils.IsFlagSet((int)ViewData[ViewDataKeys.Flags], (int)ViewDataFlags.NoAnnouncement))
            {
                <partial name="_ServerAnnouncement" />
            }

            @if (!MiscUtils.IsFlagSet((int)ViewData[ViewDataKeys.Flags], (int)ViewDataFlags.NoTitle))
            {
                <h1>@titleHtml</h1>
                <hr />
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <partial name="_FooterCommon" />
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dotnet.js" asp-append-version="true"></script>
    <script src="~/js/locale/p24-localization-keys.js" asp-append-version="true"></script>

    <script src="~/js/locale/@localizationFile" asp-append-version="true"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript" src="~/js/server-announcement.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
