<div id="modal-common-confirm" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h4 id="modal-common-confirm-header" class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>

            <div class="modal-body d-flex">
                <div id="modal-common-confirm-icon" class="col-1 text-center align-self-center"></div>
                <div id="modal-common-confirm-body" class="col-11"></div>
            </div>

            <div class="modal-footer">
                <button type="button" id="modal-common-confirm-btn-yes" class="btn btn-primary" data-dismiss="modal" onclick="">Yes</button>
                <button type="button" id="modal-common-confirm-btn-no" class="btn btn-secondary" data-dismiss="modal" onclick="">No</button>
            </div>

        </div>
    </div>
</div>
