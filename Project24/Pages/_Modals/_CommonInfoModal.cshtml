<div id="modal-common-info" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h4 id="modal-common-info-header" class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>

            <div class="modal-body d-flex">
                <div id="modal-common-info-icon" class="col-1 text-center align-self-center"></div>
                <div id="modal-common-info-body" class="col-11"></div>
            </div>

            <div id="modal-common-info-footer" class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>

        </div>
    </div>
</div>
